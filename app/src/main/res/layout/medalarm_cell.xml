<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bodered_white_bg">
    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="37dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:background="@drawable/bodered_purple_bg"
        android:id="@+id/alarmTimeLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14"
            android:textSize="27dp"
            android:textColor="@color/text_white"
            android:id="@+id/alarm_hour"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="11dp"
            android:layout_marginBottom="4dp"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="27dp"
            android:textColor="@color/text_white"
            android:id="@+id/alarm_format"
            android:layout_toRightOf="@id/alarm_hour"
            android:layout_marginBottom="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17"
            android:textSize="27dp"
            android:textColor="@color/text_white"
            android:id="@+id/alarm_minute"
            android:layout_toRightOf="@id/alarm_format"
            android:layout_marginBottom="4dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nameLayout"
        android:layout_toEndOf="@+id/alarmTimeLayout"
        android:layout_marginStart="9dp"
        android:id="@+id/relativeLayout2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016"
            android:textSize="17dp"
            android:id="@+id/add_alarm_year"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="21dp"
            android:id="@+id/alarm_ym"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/add_alarm_year" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="17dp"
            android:id="@+id/add_alarm_month"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/alarm_ym" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="21dp"
            android:id="@+id/alarm_md"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/add_alarm_month" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="17dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/alarm_md"
            android:id="@+id/add_alarm_day"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="32dp"

        android:id="@+id/nameLayout"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/alarmTimeLayout"
        android:layout_alignStart="@+id/alarmTimeLayout">
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/med_name"
            android:tint="@color/text_grey2"
            android:id="@+id/img_medname"
            ></ImageView>
        <TextView
            android:id="@+id/med_name"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="日夜百服宁"
            android:textSize="24dp"
            android:textColor="@color/text_black"
            android:singleLine="true"
            android:textStyle="bold"
            android:layout_toRightOf="@id/img_medname" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameLayout"
        android:layout_alignStart="@+id/nameLayout"
        android:layout_marginTop="8dp"
        android:id="@+id/relativeLayout3">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/eat_way"
            android:tint="@color/text_grey2"
            android:id="@+id/imgEatway"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="口服"
            android:textSize="18dp"
            android:textColor="@color/text_grey"
            android:layout_toRightOf="@id/imgEatway"
            android:id="@+id/med_eatWay"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/med_dose"
            android:tint="@color/text_grey2"
            android:layout_toRightOf="@+id/med_eatWay"
            android:layout_marginLeft="20dp"
            android:id="@+id/imgDose"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="2片"
            android:textSize="18dp"
            android:textColor="@color/text_grey"
            android:singleLine="true"
            android:layout_toRightOf="@+id/imgDose"
            android:id="@+id/med_dose"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="92dp"
        android:id="@+id/relativeLayout"
        android:layout_marginEnd="18dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/relativeLayout3"
        android:layout_alignParentEnd="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩下"
            android:textSize="17dp"
            android:id="@+id/res_dec"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22小时42分钟"
            android:textSize="19dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/resTime"
            android:layout_below="@+id/res_dec"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</RelativeLayout>
