<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bodered_blue_bg"
    tools:context="com.competition.kakin.mtreatment.UI.Notifi.AlarmAddActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view333">
        <android.support.v7.widget.Toolbar
            android:id="@+id/alarm_add_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"></android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="270dp"
        android:background="@drawable/bodered_white_bg"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/view333"
        android:layout_centerHorizontal="true"
        android:id="@+id/add_alarm_mainset">
        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/med_name"
            android:tint="@color/text_grey2"
            android:id="@+id/imageView645"
            android:layout_marginTop="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/img_alarm_time" />
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="药物名称："
            android:textSize="22dp"
            android:id="@+id/textView5465"
            android:layout_above="@+id/add_alarm_name"
            android:layout_toEndOf="@+id/imageView645" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="54dp"
            android:text="日益百服宁"
            android:textSize="27dp"
            android:singleLine="true"
            android:id="@+id/add_alarm_name"
            android:layout_below="@+id/imageView645"
            android:layout_centerHorizontal="true" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/grey_line"
            android:layout_below="@+id/add_alarm_name"
            android:layout_alignParentStart="true"
            android:layout_marginTop="17dp"
            android:id="@+id/line_alarm"/>

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/alarm"
            android:tint="@color/text_grey2"
            android:id="@+id/img_alarm_time"
            android:layout_below="@+id/line_alarm"
            android:layout_marginTop="17dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="吃药时间："
            android:textSize="22dp"
            android:layout_toRightOf="@+id/img_alarm_time"
            android:layout_alignBottom="@+id/img_alarm_time"
            android:id="@+id/tv_alarm_time"
            />

        <TimePicker
            android:layout_width="160dp"
            android:layout_height="32dp"
            android:layout_below="@+id/tv_alarm_time"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/tp_add_alarm_time"></TimePicker>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更多设置"
        android:textSize="17dp"
        android:textColor="@color/text_grey"
        android:layout_below="@+id/add_alarm_mainset"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:id="@+id/textView3" />

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="200dp"
        android:background="@drawable/bodered_white_bg"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/add_alarm_mainset">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/purple_bg"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:id="@+id/add_alarm_date">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/date"
                android:tint="@color/text_grey2"
                android:id="@+id/imageView2"
                android:layout_marginStart="13dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016"
                android:textSize="22dp"
                android:layout_marginStart="21dp"
                android:layout_marginRight="9dp"
                android:id="@+id/add_alarm_year"
                android:layout_alignTop="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="22dp"
                android:layout_marginRight="9dp"
                android:id="@+id/alarm_ym"
                android:layout_alignTop="@+id/add_alarm_year"
                android:layout_toEndOf="@+id/add_alarm_year"
                android:layout_marginStart="4dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="22dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/add_alarm_month"
                android:layout_alignTop="@+id/alarm_ym"
                android:layout_toEndOf="@+id/alarm_ym" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="22dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/add_alarm_md"
                android:layout_alignBottom="@+id/alarm_ym"
                android:layout_toEndOf="@+id/add_alarm_month" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                android:textSize="22dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/add_alarm_day"
                android:layout_alignTop="@+id/add_alarm_month"
                android:layout_toEndOf="@+id/add_alarm_md" />
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/rightin"
                android:tint="@color/text_grey2"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/purple_bg"
            android:layout_below="@+id/add_alarm_date"
            android:layout_marginTop="17dp"
            android:id="@+id/add_alarm_eatway">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/eat_way"
                android:tint="@color/text_grey2"
                android:id="@+id/img_add_alarm_eatway"
                android:layout_marginStart="13dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服用方式："
                android:textColor="@color/text_grey"
                android:textSize="22dp"
                android:layout_marginStart="21dp"
                android:layout_marginRight="9dp"
                android:layout_alignTop="@+id/img_add_alarm_eatway"
                android:layout_toEndOf="@+id/img_add_alarm_eatway"
                android:id="@+id/add_alarm_eatway_tv"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="口服"
                android:textSize="22dp"
                android:layout_toRightOf="@+id/add_alarm_eatway_tv"
                android:layout_marginLeft="7dp"
                android:layout_alignBottom="@+id/add_alarm_eatway_tv"
                android:id="@+id/add_alarm_eatway_show"/>
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/rightin"
                android:tint="@color/text_grey2"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/purple_bg"
            android:layout_below="@+id/add_alarm_eatway"
            android:layout_marginTop="17dp"
            android:id="@+id/add_alarm_dose">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/eat_way"
                android:tint="@color/text_grey2"
                android:id="@+id/img_add_alarm_dose"
                android:layout_marginStart="13dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服用量："
                android:textColor="@color/text_grey"
                android:textSize="22dp"
                android:layout_marginStart="21dp"
                android:layout_marginRight="9dp"
                android:layout_alignTop="@+id/img_add_alarm_dose"
                android:layout_toEndOf="@+id/img_add_alarm_dose"
                android:id="@+id/add_alarm_dose_tv"/>
            <EditText
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:text="2片"
                android:textSize="22dp"
                android:background="@null"
                android:singleLine="true"
                android:layout_toRightOf="@+id/add_alarm_dose_tv"
                android:layout_marginLeft="7dp"
                android:layout_alignBottom="@+id/add_alarm_dose_tv"
                android:id="@+id/add_alarm_dose_show"/>
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/edit"
                android:tint="@color/text_grey2"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
