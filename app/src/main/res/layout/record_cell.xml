<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bodered_white_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日期："
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="12dp"
        android:id="@+id/record_date"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/record_date"
        android:layout_alignTop="@+id/record_date"
        android:id="@+id/record_year"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="年"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/record_year"
        android:layout_alignTop="@+id/record_year"
        android:id="@+id/record_ym"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/record_ym"
        android:layout_alignTop="@+id/record_date"
        android:id="@+id/record_month"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="月"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/record_month"
        android:layout_alignTop="@+id/record_date"
        android:id="@+id/record_md"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/record_md"
        android:layout_alignTop="@+id/record_date"
        android:id="@+id/record_day"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/record_day"
        android:layout_alignTop="@+id/record_date"
        android:id="@+id/record_d"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/grey_line"
        android:layout_below="@+id/record_year"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:id="@+id/line_record"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="病情："
        android:textSize="24dp"
        android:layout_below="@+id/line_record"
        android:layout_alignLeft="@+id/record_date"
        android:id="@+id/ill_history"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="头疼、感冒"
        android:textSize="22dp"
        android:layout_below="@+id/ill_history"
        android:layout_alignLeft="@+id/record_date"
        android:id="@+id/record_ill"/>
</RelativeLayout>
